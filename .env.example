# Copy this file to .env and fill in your values.
# Never commit .env — it is gitignored.

# football-data.org free tier API key
# Get yours at: https://www.football-data.org/client/register
FOOTBALL_DATA_API_KEY=your_football_data_api_key_here

# Anthropic API key — used by generate_claude_predictions.py
# Get yours at: https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Secret key for protecting the /run-morning and /run-evening endpoints.
# Set this to any long random string. Use the same value in n8n's
# Authorization header: "Bearer <your_value_here>"
RAILWAY_API_KEY=your_secret_api_key_here
